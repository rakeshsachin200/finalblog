

  
    <div class="container">
            <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#"> {{user.firstName}} {{user.lastName}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{post.creationDate}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" class="img-thumbnail" src="{{post.file}}" alt="cant load image">

          <hr>

          <!-- Post Content -->
          <div>
                 <p class="lead">{{{post.description}}}</p>
          </div>
          
          <!-- Comments Form -->
          <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
              <form action="/post/{{post._id}}" method="POST">
                <div class="form-group">
                  <textarea class="form-control" name="comment_body" rows="3"></textarea>
                  <input type="hidden" name="id" value="{{post._id}}">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>




       {{#each post.comments}}
       {{#if commentIsApproved}}
               <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
              <h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>
            {{body}}
            </div>
          </div>
       {{/if}}
       {{/each}}
          <!-- Single Comment -->
         

          <!-- Comment with nested comments -->
          <div class="media mb-4">
            <div class="media-body">
            
            </div>
          </div>

        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

          <!-- Search Widget -->
          <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
              </div>
            </div>
          </div>

       

          <!-- Side Widget -->
          <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
              You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
          </div>

        </div>

      </div>
      <!-- /.row -->
    </div>

    

   